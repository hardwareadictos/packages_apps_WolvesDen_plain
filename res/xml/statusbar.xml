<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <Preference
        android:key="statusbar_clock_date"
        android:fragment="com.gzr.wolvesden.fragments.ClockOptions"
        android:title="@string/statusbar_clock_title" />

    <Preference
        android:key="statusbar_logo"
        android:fragment="com.gzr.wolvesden.fragments.StatusBarLogoSettings"
        android:title="@string/statusbar_logo_title" />

   <PreferenceCategory
        android:key="statusbar_icons_category"
        android:title="@string/status_bar_icons_category_title">

        <!-- Show Network Traffic State on Statusbar -->
        <com.gzr.wolvesden.preference.SystemSettingSwitchPreference
            android:key="network_traffic_state"
            android:title="@string/network_traffic_state_title"
            android:defaultValue="false" />

        <com.gzr.wolvesden.preference.CustomSeekBarPreference
           android:key="network_traffic_autohide_threshold"
           android:title="@string/network_traffic_autohide_threshold_title"
           android:max="10"
           android:min="0"
           android:defaultValue="1"
           android:dependency="network_traffic_state" />

   </PreferenceCategory>

    <Preference
        android:key="statusbar_battery"
        android:fragment="com.gzr.wolvesden.fragments.StatusBarBatterySettings"
        android:title="@string/statusbar_battery_title" />

    <Preference
        android:key="smart_pulldown"
        android:fragment="com.gzr.wolvesden.fragments.SmartPulldown"
        android:title="@string/smart_pulldown_title" />

   <Preference
        android:key="custom_carrier"
        android:fragment="com.gzr.wolvesden.fragments.CarrierLabel"
        android:title="@string/carrier_label_title" />

    <Preference
        android:key="qs_rows_columns"
        android:fragment="com.gzr.wolvesden.fragments.QsRowsColumns"
        android:title="@string/qs_rows_columns_title"/>

    <com.gzr.wolvesden.preference.SystemSettingSwitchPreference
        android:key="double_tap_sleep_gesture"
        android:title="@string/double_tap_sleep_gesture_title"
        android:defaultValue="true" />

    <com.gzr.wolvesden.preference.SystemSettingSwitchPreference
         android:key="roaming_indicator_icon"
         android:title="@string/roaming_indicator_icon_title"
         android:summary="@string/roaming_indicator_icon_summary"
         android:defaultValue="true" />

    <com.gzr.wolvesden.preference.SystemSettingSwitchPreference
         android:key="volte_icon"
         android:title="@string/volte_icon_title"
         android:summary="@string/volte_icon_summary"
         android:defaultValue="false"/>

    <!-- Data icon - show 4G instead of LTE -->	
    <com.gzr.wolvesden.preference.SystemSettingSwitchPreference
            android:key="show_lte_fourgee"
            android:title="@string/show_4g_title"
            android:summary="@string/show_4g_summary"
            android:defaultValue="false" />

</PreferenceScreen>